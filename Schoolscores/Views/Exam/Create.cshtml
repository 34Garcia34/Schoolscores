@model Schoolscores.Models.ViewModels.ExamVM

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            <div class="card mt-3">
                <div class="card-header">
                    <h4 class="card-title mb-0">New Exam</h4>
                </div>
                <form asp-action="Create" method="post">
                    <div class="card-body">
                        <div class="row m-0 p-0 g-3">
                            <div class="form-group">
                                <label asp-for="@Model.Exams.StudentId"></label>
                                <select asp-for="@Model.Exams.StudentId" class="form-control" asp-items="@Model.StudentList"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Exams.TeacherId"></label>
                                <select asp-for="@Model.Exams.TeacherId" class="form-control" asp-items="@Model.TeachersList"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Exams.Examscores"></label>
                                <input asp-for="@Model.Exams.Examscores" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="card-footer text-end">
                        <input type="submit" class="btn btn-primary" value="Create" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
