@model Schoolscores.Models.ViewModels.IndexVM

@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid">
    <h3>Teachers & Student Tracking</h3>
    <section class="container">
        <div class="row">
            <div class="col-8 p-0 mt-3">
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#TeachersTab" type="button" role="tab" aria-controls="Teachers" aria-selected="true">Teachers</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#StudentsTab" type="button" role="tab" aria-controls="Students" aria-selected="false">Students</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="sales-tab" data-bs-toggle="tab" data-bs-target="#ScoresTab" type="button" role="tab" aria-controls="Scores" aria-selected="false">S</button>
                    </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="TeachersTab" role="tabpanel" aria-labelledby="home-tab">
                        <div class="card mt-2">
                            <div class="card-header">
                                <div class="row m-0 p-0">
                                    <div class="col-3">
                                        <h4 class="card-title mb-0">Teachers</h4>
                                    </div>
                                    <div class="col-9 text-end">
                                        <a class="btn btn-primary" asp-controller="Teacher" asp-action="Create">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-plus-fill" viewBox="0 0 16 16">
                                              <path d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
                                              <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z"/>
                                            </svg>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                @if(!Model.Teachers.Any())
                                {
                                    <p class="mb-0">There are currently no Teacher records. Use the add button above to add a Teacher.</p>
                                } else
                                {
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>TeacherId</th>
                                                <th>First Name</th>
                                                <th>Last Name</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach(var Teacher in Model.Teachers)
                                            {
                                                <tr>
                                                    <td>@Teacher.TeacherId</td>
                                                    <td>@Teacher.FirstName</td>
                                                    <td>@Teacher.LastName</td>

                                                    <td class="text-center">
                                                        <a class="btn btn-sm btn-info" asp-controller="Teacher" asp-action="Edit" asp-route-id="@Teacher.TeacherId">
                                                            Edit
                                                        </a>
                                                        <a class="btn btn-sm btn-danger" asp-controller="Teacher" asp-action="Delete" asp-route-id="@Teacher.TeacherId">
                                                            Delete
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="StudentsTab" role="tabpanel" aria-labelledby="profile-tab">
                        <div class="card mt-2">
                            <div class="card-header">
                                <div class="row m-0 p-0">
                                    <div class="col-3">
                                        <h4 class="card-title mb-0">Students</h4>
                                    </div>
                                    <div class="col-9 text-end">
                                        <a class="btn btn-primary" asp-controller="Student" asp-action="Create">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-plus-fill" viewBox="0 0 16 16">
                                              <path d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
                                              <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z"/>
                                            </svg>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                @if(!Model.Students.Any())
                                {
                                    <p class="mb-1">There are currently no  Student records. Use the add button above to add a Student Record.</p>
                                } else
                                {
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>StudentId</th>
                                                <th>First Name</th>
                                                <th>Last Name</th>
                                                <th>Exam Score</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach(var Student in Model.Students)
                                            {
                                                <tr>
                                                    <td>@Student.StudentId</td>
                                                    <td>@Student.FirstName</td>
                                                    <td>@Student.LastName</td>
                                                    <td>@Student.ExamScore</td>
                                                    <td class="text-center">
                                                        <a class="btn btn-sm btn-info" asp-controller="Student" asp-action="Edit" asp-route-id="@Student.StudentId">
                                                            Edit
                                                        </a>
                                                        <a class="btn btn-sm btn-danger" asp-controller="Student" asp-action="Delete" asp-route-id="@Student.StudentId">
                                                            Delete
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                }
                            </div>
                        </div>
                    </div>
                     <div class="tab-pane fade" id="salesTab" role="tabpanel" aria-labelledby="sales-tab">
                        <div class="card mt-2">
                            <div class="card-header">
                                <div class="row m-0 p-0">
                                    <div class="col-12">
                                        <h4 class="card-title mb-0">Sales by Country</h4>
                                    </div>
                                    @*<div class="col-9 text-end">
                                        <a class="btn btn-primary" asp-controller="Invoice" asp-action="Create">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-plus-fill" viewBox="0 0 16 16">
                                              <path d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
                                              <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z"/>
                                            </svg>
                                        </a>
                                    </div>*@
                                </div>
                            </div>
                            <div class="row">
                                <div class='col-4'>
                                    <div class="card-body">
                                        @if(!Model.ExamScores.Any())
                                        {
                                            <p class="mb-1">There are currently no Exam Scores.</p>
                                        } else
                                        {
                                            <table class="table table-striped">
                                                <thead>
                                                    <tr>
                                                        <th>Student Exam Scores</th>
                                                        <th>Total Scores</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach(var scores in Model.ExamScores)
                                                    {
                                                        <tr>
                                                            <td>@Examscores.Scores</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        }
                                    </div>
                                </div>
                                <div class="col-6 pb-3">
                                   <canvas id="myChart" class="text-end" width="40" height="400"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
     <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.6.2/chart.min.js" integrity="sha512-tMabqarPtykgDtdtSqCL3uLVM0gS1ZkUAVhRFu1vSEFgvB73niFQWJuvviDyBGBH22Lcau4rHB5p2K2T0Xvr6Q==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
     <script type="text/javascript">
         const ctx = document.getElementById('myChart');
         let labels = @Html.Raw(Json.Serialize(Model.Labels));
         let countries = @Html.Raw(Json.Serialize(Model.Values));
        const myChart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Scores',
                    data: countries,
                    backgroundColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                }]
            },
            borderWidth: 1
         });
     </script>
}